"""File groups for the tool paths used by the toolchain. These filegroups wrap the various tools
from the different nix packages.
"""

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "all_files",
    srcs = [
        ":ar_files",
        ":as_files",
        ":compiler_files",
        ":dwp_files",
        ":linker_files",
        ":objcopy_files",
        ":strip_files",
    ],
)

filegroup(
    name = "ar_files",
    srcs = ["@bintools-unwrapped//:ar_files"],
)

filegroup(
    name = "as_files",
    srcs = ["@bintools-unwrapped//:as_files"],
)

filegroup(
    name = "compiler_files",
    srcs = ["@gcc7//:compiler_files"],
)

filegroup(
    name = "dwp_files",
    srcs = ["@bintools-unwrapped//:dwp_files"],
)

filegroup(
    name = "linker_files",
    srcs = [
        "@gcc7//:linker_files",
        "@bintools-unwrapped//:linker_files",
    ],
)

filegroup(
    name = "objcopy_files",
    srcs = ["@bintools-unwrapped//:objcopy_files"],
)

filegroup(
    name = "strip_files",
    srcs = ["@bintools-unwrapped//:strip_files"],
)
